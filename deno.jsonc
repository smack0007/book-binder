{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "html",
    "jsxFragmentFactory": "html"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["explicit-function-return-type"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 120,
      "indentWidth": 2
    }
  },
  "importMap": "./imports.jsonc",
  "tasks": {
    "exec": "deno run --allow-net --allow-read --allow-write --config ./deno.jsonc ./cli.ts"
  }
}
